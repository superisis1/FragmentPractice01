<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/fragOne"
                    class="kr.insungjung.fragmentpractice01.fragments.FragmentOne"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <fragment
                    android:id="@+id/fragTwo"
                    class="kr.insungjung.fragmentpractice01.fragments.FragmentTwo"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

                <fragment
                    android:id="@+id/fragThree"
                    class="kr.insungjung.fragmentpractice01.fragments.FragmentThree"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>
